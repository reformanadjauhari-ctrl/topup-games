import zipfile, os

base = "/mnt/data/site"
os.makedirs(base, exist_ok=True)
os.makedirs(base+"/assets", exist_ok=True)

html_content = """<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Top Up Games Murah</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">
  <header class="bg-blue-600 text-white p-5 shadow-md">
    <h1 class="text-3xl font-bold text-center">Top Up Games Murah</h1>
  </header>
  <p class="text-center p-6">Website siap di-deploy.</p>
</body>
</html>"""

with open(base+"/index.html", "w") as f:
    f.write(html_content)

zip_path = "/mnt/data/topup-website.zip"
with zipfile.ZipFile(zip_path, "w") as zipf:
    for root, dirs, files in os.walk(base):
        for file in files:
            full_path = os.path.join(root, file)
            arcname = os.path.relpath(full_path, base)
            zipf.write(full_path, arcname)

zip_path
